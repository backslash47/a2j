<?xml version="1.0"?>

<!-- $Id: build.xml,v 1.2 2005/03/22 12:29:42 ibbo Exp $ -->

<project name="a2j" default="all" basedir=".">

   <target name="init">
	<property name="Name" value="main"/>
	<property name="name" value="main"/>
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
	<property name="dist" value="${dirs.base}/dist"/>
	<property name="lib" value="${dirs.base}/lib"/>
   </target>


   <target name="all" depends="init,prepare,dist">
   </target>

   <target name="prepare">
     <tstamp/>
     <mkdir dir="${classdir}" />
     <mkdir dir="${lib}" />
     <mkdir dir="${dist}" />
   </target>

   <target name="dist" depends="compile">
     <copy file="./oidreg.default" todir="${classdir}" /> 

     <jar jarfile="${dist}/a2j.jar" basedir="${classdir}" manifest="./etc/a2j-manifest" />

     <jar jarfile="${dist}/a2jruntime.jar" 
	     basedir="${classdir}" 
	     manifest="./etc/a2j-runtime-manifest"
	     includes="oidreg.default,org/jzkit/a2j/codec/runtime/**,org/jzkit/a2j/codec/util/**, org/jzkit/a2j/gen/AsnUseful/**, org/jzkit/a2j/util/**" />
   </target>

   <target name="compile" depends="init,prepare">
     <javac srcdir="${src}"
               debug="${build.debug}"
               deprecation="${build.deprecation}"
               destdir="${classdir}"
               includes="org/jzkit/**/*.java">
      <classpath>
         <pathelement path="${classpath}"/>
         <fileset dir="${lib}">
           <include name="**/*.jar"/>
         </fileset>
         <pathelement path="${classdir}"/>
       </classpath>
     </javac>
   </target>

</project>

